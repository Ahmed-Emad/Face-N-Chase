<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmedemad.facenchase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.ahmedemad.facenchase.Load_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullPanelTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahmedemad.facenchase.Main_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullScreenTheme" >
        </activity>
        <activity
            android:name="com.ahmedemad.facenchase.Game_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullScreenTheme" >
        </activity>
    </application>

</manifest>